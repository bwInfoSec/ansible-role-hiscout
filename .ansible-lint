---
exclude_paths:
  - .cache/
  - .github/
  - inventory.yml
  - ${HOME}/.ansible/
  - .pre-commit-config.yaml
  - pre-commit-config.yaml
  - "**/files"
  - files
  - .yamllint
  - inventories/*
  - "*/.ansible/*"

skip_list:
  - "command-instead-of-module"
  - "name[template]"

extra_vars:
  target: "not-defined"
